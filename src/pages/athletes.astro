---
import '@fontsource/quattrocento-sans'
import Banner from '../components/Banner/Banner.astro'
import Navbar from '../components/Navbar/Navbar.astro'
import Taskbar from '../components/Taskbar/Taskbar'
import '../styles/tailwind.css'
import Modal from '../components/Modal/Modal'
import AthletesModal from '../components/Modal/AthletesModal'
---

<html lang="en" class="flex">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Mounds View High School's Boys Cross Country and Track & Field Website"
        />
        <link rel="icon" href="/favicon.ico" sizes="any" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" sizes="any" />
        <link rel="apple-touch-icon" href="/favicon.svg" />
        <link rel="stylesheet" href="fonts.css" />
        <style>
            html {
                font-family: Montserrat;
                margin: 0;
            }
            body {
                margin: 0;
                min-height: 100vh;
            }

            a {
                color: rgb(34 197 94);
            }
        </style>
        <title>Mounds View XC</title>
    </head>
    <body class="flex justify-center w-screen bg-neutral-700">
        <main class="flex flex-col grow-1">
            <Navbar />
            <Banner />
            <AthletesModal client:load />

            <div id="background" class="flex-col text-slate-50 pb-8">
                <div class="flex justify-center my-8">
                    <a
                        target="_blank"
                        href="https://docs.google.com/document/d/1RLImxlatxm2orNH7D5gwlmPmLyzcC6eyQY5-1jv2Qx0/edit?usp=share_link"
                        >Shoe Guide</a
                    >
                </div>
                <div class="flex justify-center my-8">
                    <a
                        target="_blank"
                        href="https://docs.google.com/forms/d/e/1FAIpQLSe1OrnkPod3R1cGlw_qwHnDMzj1hNtIj3zp1iKoPcKoSEn5LQ/viewform?usp=sf_link"
                        >Athlete Intake Form</a
                    >
                </div>
            </div>
            <!-- 
                The password is... password
                <Modal isOpen={isOpen} onClose={() => console.log('closing')}>
                <div>
                    <h1 class="text-lg font-bold">
                        Please enter the password to verify that you're in the
                        super secret club
                    </h1>
                    <label>Password:</label>
                    <input
                        type="password"
                        placeholder="password"
                        class="border-solid"
                        id="password-input"
                    />
                    <button id="submit-button">Submit</button>
                </div>
            </Modal> -->
        </main>
        <Taskbar client:load />
    </body>
</html>
