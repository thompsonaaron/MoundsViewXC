---
import BannerSmall from '../assets/banner-small.webp'
import BannerMedium from '../assets/banner-medium.webp'
import BannerLarge from '../assets/banner-large.webp'
import BannerXLarge from '../assets/banner-xlarge.webp'
import Navbar from '../components/Navbar/Navbar.astro'
import Taskbar from '../components/Taskbar/Taskbar'
import '../styles/tailwind.css'
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Mounds View High School, Cross Country, Track and Field, Meet and practice schedule"
        />
        <link rel="icon" href="/favicon.ico" sizes="any" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" sizes="any" />
        <link rel="apple-touch-icon" href="/favicon.svg" />
        <style>
            html {
                font-family: Montserrat;
                margin: 0;
            }
            body {
                font-family: Montserrat;
                margin: 0;
                min-height: 100vh;
            }
        </style>
        <title>Mounds View XC</title>
    </head>
    <body class="flex justify-center w-full bg-neutral-700">
        <main class="flex flex-col justify-center grow-1 w-full">
            <Navbar />
            <img
                srcset={`${BannerSmall} 400w, ${BannerMedium} 800w, ${BannerLarge} 1200w, ${BannerXLarge} 1600w`}
                sizes="(max-width: 401px) 400px, (max-width: 801px) 800px, (max-width: 1201px): 1200px, 1600px"
                src={BannerLarge}
                object-fit="cover"
                alt="homepage-background"
                width="100%"
                style={{ maxHeight: '400px' }}
            />
            <div id="background" class="flex-col text-slate-50 pb-8">
                <div class="flex justify-center my-8">
                    <div
                        class="flex flex-col w-full h-screen md:h-max md:w-9/12 xl:w-7/12 relative"
                        style={{ paddingTop: '56.25%' }}
                    >
                        <iframe
                            src="https://calendar.google.com/calendar/embed?height=400&wkst=2&bgcolor=%23ffffff&ctz=America%2FChicago&showTitle=0&showDate=1&showPrint=0&showTabs=0&showCalendars=0&showTz=1&src=b2oxMmR0cmJzY2RnOGpqdW5vc21xcGJ0cmNAZ3JvdXAuY2FsZW5kYXIuZ29vZ2xlLmNvbQ&color=%230B8043"
                            width="100%"
                            height="100%"
                            class="mb-12 absolute top-0 bottom-0 right-0 left-0"
                        ></iframe>
                    </div>
                </div>
                <div class="h-4"></div>
            </div>
            <Taskbar client:load />
        </main>
    </body>
</html>
